<style>
    .first {
        text-align: center;
    }
    .second {
        margin-left:9%;
    }
    .card{
        box-shadow: 2px 2px;
        color:grey;
    }
</style>

<div class="first" style="background-color:#F7F7F7; box-shadow:2px 1px;">
    <a class="container">
        <h1>Jobs</h1>
        <h5>Jobs posted by your fellow Alumni</h5>
        {{#if user}}
        <a href="/postjobs"> <button class="btn btn-danger"> Post a new Job</button></a>
        {{else}}
            <a href="/loginuser"> <button class="btn btn-danger"> Post a new Job</button></a>
        {{/if}}
                <br><br><br>
        <select class="form-control form-control-sm" style="width:700px; margin-left:27%;">
            <option default>Branch</option>
            <option >CSE</option>
            <option >IT</option>
            <option >ECE</option>
            <option >EEE</option>
            <option >Mechanical</option>
            <option >Civil</option>


        </select>
        <br>
        <button class="btn" >Submit</button>

        <br><br><br>
</div>
</div>
<div class="second">
    <div class="container">

        <h5 style="text-align:right;"></h5>
        <br>
        <div class="row">

            {{#each job}}
                <div class="card" style="width: 18rem; margin-left:2rem; margin-bottom:2rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{jobTitle}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{company}}</h6>
                        <p class="card-text">{{description}}</p>
                        {{#if user}}
                        <a href="/jobselect" class="card-link">Card link</a>
                        <a href="#" class="card-link">Another link</a>
                    {{else}}
                            <a href="/loginuser" class="card-link">Card link</a>
                            <a href="/loginuser" class="card-link">Another link</a>
                        {{/if}}

                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
